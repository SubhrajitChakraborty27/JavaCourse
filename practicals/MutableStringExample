package com;

public class MutableStringExample {
	public static void my() {
		StringBuffer s = new StringBuffer("Hey Virat");//Creating a mutable string
		s.append("  ,Welcome.....");//Adding this string to the same object
		System.out.println("String is :" + s);
		s.insert(4,"Jeet");//Inserting a string in a particular position
		System.out.println("Insert is : " + s);
			
		StringBuilder s1 = new StringBuilder("World");//Creating another mutable string 
		s1.replace(1,3,"python");
		System.out.println("replace is : " + s1);
		s1.delete(1,3);//deleting a substring from a specified position
		System.out.println("delete is : " + s1);
		s1.reverse();//reverses the string
		System.out.println("reverse is : " + s1);
		}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		my();	
	}

}
